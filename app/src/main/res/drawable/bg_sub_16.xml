<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <corners android:radius="10dp" />
            <solid android:color="#9A45E3" /> <!-- Màu bóng của dialog -->
        </shape>
    </item>

    <item
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="3dp"> <!-- Dịch nội dung xuống dưới 8dp để tạo hiệu ứng bóng -->
        <shape>
            <corners android:radius="10dp" />
            <stroke
                android:width="2dp"
                android:color="#660B80" />
            <solid android:color="#FFFFFFFF" /> <!-- Màu nền của dialog -->
        </shape>
    </item>
</layer-list>
