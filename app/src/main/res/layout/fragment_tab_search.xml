<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/bg_grey"
    tools:context=".tabsinmain.TabSearch" >

    <RelativeLayout
        android:id="@+id/search_toolbar"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:background="@drawable/gradient_bg_blue"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="15sp">
            <ImageView
                android:id="@+id/search_headericon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/search_headericon"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tra cứu thông tin"
                android:textSize="25sp"
                android:fontFamily="@font/merriweathersanswght"
                android:textStyle="bold"
                android:layout_toRightOf="@id/search_headericon"
                android:layout_marginLeft="10sp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/search_toolbar"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="10sp"
        android:layout_marginBottom="10sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/merriweathersanswght"
                    android:text="Tìm kiếm"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/viewToSearch"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/edit_text_background"
                    android:hint="Nhập tên môn học"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/grey"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.321" />

                <EditText
                    android:id="@+id/student_name_search_bar"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edit_text_background"
                    android:hint="Nhập thông tin sinh viên"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/grey"
                    android:textSize="10sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/viewToSearch" />

                <EditText
                    android:id="@+id/student_id_search_bar"
                    android:layout_width="117dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="7dp"
                    android:layout_marginEnd="127dp"
                    android:background="@drawable/edit_text_background"
                    android:hint="Nhập mã sinh viên"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="5dp"
                    android:text=""
                    android:textColor="@color/grey"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/viewToSearch"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/student_name_search_bar"
                    app:layout_constraintTop_toBottomOf="@+id/viewToSearch"
                    app:layout_constraintVertical_bias="1.0" />

                <EditText
                    android:id="@+id/class_id_search_bar"
                    android:layout_width="117dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edit_text_background"
                    android:hint="Nhập mã lớp học"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="5dp"
                    android:text=""
                    android:textColor="@color/grey"
                    android:textSize="10sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/student_id_search_bar"
                    app:layout_constraintTop_toBottomOf="@+id/viewToSearch" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/white"
                android:divider="@color/grey"
                android:stretchColumns="1,2,3"
                android:id="@+id/tableSearch"
                android:padding="2sp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:showDividers="middle">

                <TableRow
                    android:background="@color/tb_grey"
                    android:divider="@color/grey"
                    android:showDividers="middle">

                    <TextView
                        android:id="@+id/student_info_search"
                        android:layout_width="117dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:padding="5sp"
                        android:text="@string/student_info_string"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/class_id_search"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:padding="5sp"
                        android:text="@string/student_class_id"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/class_name_search"
                        android:layout_width="152dp"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:padding="5sp"
                        android:text="@string/student_class_name"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:padding="5sp"
                        android:textSize="10sp"
                        android:id="@+id/portal_number_search"
                        android:gravity="center_horizontal"
                        android:text="@string/portal_number"/>

                </TableRow>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:id="@+id/recyclerViewSearch"/>

            </TableLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="40sp"
                android:fontFamily="@font/signika"
                android:text="Tổng tín chỉ: [N/A]"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="TextSizeCheck" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>