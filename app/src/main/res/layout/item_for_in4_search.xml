<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="1,2,3">

        <TableRow
            android:background="@color/tb_grey"
            android:divider="@color/grey"
            android:showDividers="middle">

            <TextView
                android:layout_width="117dp"
                android:layout_height="wrap_content"
                android:text="Lương Thị Thu Hương"
                android:textSize="10sp"
                android:layout_gravity="center"
                android:id="@+id/item_search_info" />

            <TextView
                android:id="@+id/item_search_class_id"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="5sp"
                android:text="INT3120 50"
                android:textSize="10sp" />

            <TextView
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:padding="5sp"
                android:layout_column="1"
                android:textSize="10sp"
                android:text="Phát triển ứng dụng di động"
                android:id="@+id/item_search_class_name"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:padding="5sp"
                android:text="3"
                android:textSize="10sp"
                android:id="@+id/item_search_portal_number"
                android:gravity="center_horizontal" />

        </TableRow>


</TableLayout>